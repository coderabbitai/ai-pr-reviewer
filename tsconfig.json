{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "incremental": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "esnext",
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "noEmit": true
  },
  "exclude": ["dist", "lib", "node_modules", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
